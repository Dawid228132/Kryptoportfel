
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="jumbotron">

    <form name="login">
        <table class="table">
            <tr>
                <td>
                    <p>Login:</p>
                </td>
                <td>
                    <input type="text" id="login" />
                </td>
            </tr>
            <tr>
                <td>
                    <p>Password:</p>
                </td>
                <td>
                    <input type="password" id="password" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" onclick="login()" value="Login"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <p style="font-size:small;">If you don't have an account, you can register here: <a href="/Home/Register">click</a></p>
                </td>
            </tr>
        </table>
    </form>


</div>

